<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/hourlyTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interreg"
            android:text="23:00"
            android:textColor="@color/soft_gray_mist_d9d9d9"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/hourlyWeatherIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_cloud"
            app:tint="@color/light_sky_ice_bef4fe" />

        <TextView
            android:id="@+id/hourlyTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interreg"
            android:text="32Â°C"
            android:textColor="@color/soft_gray_mist_d9d9d9"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>