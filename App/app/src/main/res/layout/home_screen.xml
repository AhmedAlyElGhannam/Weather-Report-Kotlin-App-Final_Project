<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <!-- Semi-transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#991F2A44" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Current Weather Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#331F2A44"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/weatherImg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/cloudy"
                        app:lottie_speed="1.2" />

                    <TextView
                        android:id="@+id/tempTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/assistant"
                        android:text="33°C"
                        android:textColor="@color/soft_gray_mist_d9d9d9"
                        android:textSize="76sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/interreg"
                        android:text="Cloudy"
                        android:textColor="@color/soft_gray_mist_d9d9d9"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/highLowTempTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/interreg"
                            android:text="↑ 38° ↓ 22°"
                            android:textColor="@color/soft_gray_mist_d9d9d9"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/feelslikeTempTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/interreg"
                            android:text="Feels like 31°"
                            android:textColor="@color/soft_gray_mist_d9d9d9"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/dateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/interreg"
                        android:text="Sun, May 18"
                        android:textColor="@color/soft_gray_mist_d9d9d9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/timeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/interreg"
                        android:text="22:31"
                        android:textColor="@color/soft_gray_mist_d9d9d9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/locationTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/interreg"
                        android:text="Kerdasa, Giza Governorate, Egypt"
                        android:textColor="@color/soft_gray_mist_d9d9d9"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hourly Weather Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interreg"
                    android:paddingBottom="20dp"
                    android:text="Weather Hourly"
                    android:textColor="@color/soft_gray_mist_d9d9d9"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#551F2A44"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hourlyWeatherRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Daily Weather Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interreg"
                    android:paddingBottom="20dp"
                    android:text="Daily Weather"
                    android:textColor="@color/soft_gray_mist_d9d9d9"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#551F2A44"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dailyWeatherRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Additional Weather Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interreg"
                    android:paddingBottom="20dp"
                    android:text="Additional Details"
                    android:textColor="@color/soft_gray_mist_d9d9d9"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#551F2A44"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:padding="28dp"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <!-- Humidity -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_humidity"
                                app:tint="@color/light_sky_ice_bef4fe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interreg"
                                android:text="27%"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/interreg"
                                android:text="Humidity"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Pressure -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_pressure"
                                app:tint="@color/light_sky_ice_bef4fe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interreg"
                                android:text="1012 hPa"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/interreg"
                                android:text="Pressure"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Wind -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_wind"
                                app:tint="@color/light_sky_ice_bef4fe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interreg"
                                android:text="15 km/h"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/interreg"
                                android:text="Wind"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Feels Like -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_temp"
                                app:tint="@color/light_sky_ice_bef4fe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interreg"
                                android:text="31°C"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/interreg"
                                android:text="Feels Like"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Cloud Cover -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_cloud"
                                app:tint="@color/light_sky_ice_bef4fe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interreg"
                                android:text="70%"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/interreg"
                                android:text="Cloud Cover"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- UV Index -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_uv"
                            app:tint="@color/light_sky_ice_bef4fe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interreg"
                                android:text="0.0"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/interreg"
                                android:text="UV Index"
                                android:textColor="@color/soft_gray_mist_d9d9d9"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </GridLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>